gridSize = 50

.map
  position relative

  .unit
    position absolute
    width 40px
    height 40px
    border-radius 30px
    margin 5px
    padding 2px
    transition all .2s
    border 2px solid transparent

    &.object
      background black

    &.selected
      border-color blue

    &.targeted
      border-color orange

    &.moved
      opacity 0.5

    .unit-menu
      background white
      width 100px
      li
        padding .5rem .5rem

.grid-item
  display: block
  float: left
  width (gridSize)px
  height (gridSize)px
  border 1px solid #aaa

  &[data-x="0"]
    clear both

  &.path
    background-color green
