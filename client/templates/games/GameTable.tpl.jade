if hasFinished
  with round
    +RoundScoreboard
else
  .navbar-fixed
    nav
      .nav-wrapper
        .container
          a.brand-logo.center(href='/') Meteor Wars
          ul.left
            li
              +loginButtons
          with round
            if isCurrentPlayer
              ul.right
                li
                  a You are playing!
                li
                  .btn.next-turn
                    .fa.fa-check
                    span I'm done!
            else
              with getCurrentPlayer
                ul.right
                  li #{name} is playing
              
  .map-container
    .map(style=mapStyle)
      each immutables
        +Immutable
      
      each grid
        each this
          .grid-item(class=gridClass, data-x=x, data-y=y)
            .overlay
            
      each units
        +Unit
